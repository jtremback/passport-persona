<form action="/auth/persona" method="post" style="display:none;">
    <input type="text" name="assertion"/>
</form>

<img src="https://persona.org/i/sign_in_red.png" id="persona"/>
<script>
  $("#persona").click(function(){
    navigator.id.getVerifiedEmail(function(assertion) {
      if (assertion) {
        $("input").val(assertion);
        $("form").submit();
      } else {
        location.reload();
      }
    });
  });
</script>
